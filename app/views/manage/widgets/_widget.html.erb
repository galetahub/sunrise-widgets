<%= content_tag(:div, :id=>dom_id(widget), :class=>"dinamic-bl") do %>
  <div class="act-bl" style="display:none;">
    <%= link_to image_tag("manage/ico_edit.gif", :alt=>t('manage.edit'), :title=>t('manage.edit')), edit_manage_widget_path(:id=>widget.id), :class=>"icons" %>

    <%= link_to image_tag("manage/ico_del.gif", :alt=>t('manage.delete'), :title=>t('manage.delete')), manage_widget_path(:id=>widget.id), 
          :method=>:delete, :confirm=>t("manage.confirm_delete"), :class=>"icons" %>
  </div>
  
  <div class="bot-bg">
    <div class="dinamic-container">
    	<div class="right-data">	
        <div class="right-data-cont">
          <div class="dinamic-inner">
          	<div class="r-block">
              <div class="block-cont">
                <%= link_to widget.title, edit_manage_widget_path(:id=>widget.id), :class=>"title" %>
                <table border="0" width="70%" cellspacing="0" cellpadding="0" class="inf">
                  <tr>
                    <td class="left">Type:</td>
                    <td><%= widget.widget_type.try(:title) %></td>
                  </tr>
                  <tr>
                    <td class="left">Position:</td>
                    <td><%= widget.widget_position.try(:title) %></td>
                  </tr>
                  <tr>
                    <td class="left">Structure:</td>
                    <td><%= widget.structure.try(:title) %></td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="left-data">
        <span class="data"><%= raw I18n.l(widget.created_at, :format=>"<span>%d/%m</span>%Y") %></span>
      </div>
    </div>
  </div>
<% end %>
